<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ui.gui.Controller"
            prefHeight="600.0" prefWidth="1200.0">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <VBox spacing="8.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <HBox spacing="8.0" alignment="CENTER_LEFT">
            <Label text="Filter:"/>
            <ComboBox fx:id="comboBox" HBox.hgrow="ALWAYS" onAction="#filterDucks" prefWidth="220.0"/>
            <Button fx:id="buttonNext" layoutX="347.0" layoutY="299.0" mnemonicParsing="false" onAction="#onNextPage" text="Next" />
            <Button fx:id="buttonPrevious" layoutX="85.0" layoutY="299.0" mnemonicParsing="false" onAction="#onPreviousPage" text="Previous" />
            <Label fx:id="labelPage" layoutX="206.0" layoutY="303.0" text="Page 0 of 0" />

        </HBox>
        <TableView fx:id="tableView" VBox.vgrow="ALWAYS" >
            <columns>
                <TableColumn fx:id="usernameCol" text="Username" prefWidth="140.0"/>
                <TableColumn fx:id="emailCol" text="Email" prefWidth="220.0"/>
                <TableColumn fx:id="nrOfFriendsCol" text="Number Of Friends" prefWidth="200.0"/>
                <TableColumn fx:id="typeCol" text="Type" prefWidth="120.0"/>
                <TableColumn fx:id="speedCol" text="Speed" prefWidth="100.0"/>
                <TableColumn fx:id="rezistanceCol" text="Rezistance" prefWidth="110.0"/>
                <TableColumn fx:id="flockNameCol" text="Flock" prefWidth="140.0"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>