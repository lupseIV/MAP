<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ui.gui.FriendshipController"
            prefHeight="600.0" prefWidth="900.0">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <VBox spacing="8.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <Label text="Friendship Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="8.0" alignment="CENTER_LEFT">
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="addButton" text="Add Friendship" onAction="#onAdd" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button fx:id="deleteButton" text="Delete Friendship" onAction="#onDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>

        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="60.0"/>
                <TableColumn fx:id="user1IdCol" text="User 1 ID" prefWidth="100.0"/>
                <TableColumn fx:id="user1UsernameCol" text="User 1 Username" prefWidth="180.0"/>
                <TableColumn fx:id="user2IdCol" text="User 2 ID" prefWidth="100.0"/>
                <TableColumn fx:id="user2UsernameCol" text="User 2 Username" prefWidth="180.0"/>
            </columns>
        </TableView>

        <HBox spacing="8.0" alignment="CENTER">
            <Button fx:id="buttonPrevious" text="Previous" onAction="#onPreviousPage"/>
            <Label fx:id="labelPage" text="Page 0 of 0"/>
            <Button fx:id="buttonNext" text="Next" onAction="#onNextPage"/>
        </HBox>
    </VBox>
</AnchorPane>
