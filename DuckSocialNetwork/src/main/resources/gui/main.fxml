<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ui.gui.MainController"
            prefHeight="700.0" prefWidth="1200.0">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <VBox spacing="8.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <Label text="Duck Social Network" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS">
            <!-- Tabs will be loaded dynamically -->
        </TabPane>
    </VBox>
</AnchorPane>
