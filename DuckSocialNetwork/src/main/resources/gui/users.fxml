<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.ui.gui.UserController"
            prefHeight="600.0" prefWidth="1000.0">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <VBox spacing="8.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <Label text="User Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="8.0" alignment="CENTER_LEFT">
            <Label text="Filter by Type:"/>
            <ComboBox fx:id="comboBox" HBox.hgrow="ALWAYS" onAction="#filterUsers" prefWidth="150.0"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="addButton" text="Add User" onAction="#onAdd" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button fx:id="updateButton" text="Update User" onAction="#onUpdate" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            <Button fx:id="deleteButton" text="Delete User" onAction="#onDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>

        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="60.0"/>
                <TableColumn fx:id="usernameCol" text="Username" prefWidth="150.0"/>
                <TableColumn fx:id="emailCol" text="Email" prefWidth="220.0"/>
                <TableColumn fx:id="nrOfFriendsCol" text="Friends" prefWidth="80.0"/>
                <TableColumn fx:id="userTypeCol" text="Type" prefWidth="100.0"/>
            </columns>
        </TableView>

        <HBox spacing="8.0" alignment="CENTER">
            <Button fx:id="buttonPrevious" text="Previous" onAction="#onPreviousPage"/>
            <Label fx:id="labelPage" text="Page 0 of 0"/>
            <Button fx:id="buttonNext" text="Next" onAction="#onNextPage"/>
        </HBox>
    </VBox>
</AnchorPane>
