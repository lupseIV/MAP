<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.ui.gui.SocialController"
            styleClass="content-pane">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 20 0;">
            <Label text="Manage Friendships" styleClass="h1-label"/>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="nrOfCommunities" styleClass="h2-label"/>
            <Button text="Show Most Sociable Community" onAction="#onMostSociableCommunity"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="friendshipsTable" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="idCol" text="Id"/>
                <TableColumn fx:id="user1Col" text="User 1"/>
                <TableColumn fx:id="user2Col" text="User 2"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <bottom>
        <HBox styleClass="control-bar">
            <Button fx:id="buttonPrevious" text="Previous Page" onAction="#onPrevious" styleClass="nav-button"/>
            <Label fx:id="labelPage" text="Page 1" style="-fx-text-fill: white; -fx-padding: 5;"/>
            <Button fx:id="buttonNext" text="Next Page" onAction="#onNext" styleClass="nav-button"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Add" onAction="#handleAdd" styleClass="action-button"/>
            <Button text="Delete" onAction="#handleDelete" styleClass="danger-button"/>
        </HBox>
    </bottom>
</BorderPane>
