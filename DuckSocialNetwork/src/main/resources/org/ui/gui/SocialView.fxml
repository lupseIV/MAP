<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="content-pane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ui.gui.SocialController">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 20 0;">
            <Label styleClass="h1-label" text="Manage Friendships" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="nrOfCommunities" styleClass="h2-label" />
         <HBox alignment="CENTER" spacing="15.0">
            <children>
                  <Button onAction="#onMostSociableCommunity" text="Show Most Sociable Community" />
               <ComboBox fx:id="statusCombo" onAction="#onComboboxChange" prefWidth="150.0" promptText="Status" />
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="friendshipsTable" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="idCol" text="Id" />
                <TableColumn fx:id="friendCol" text="User 1" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

    <bottom>
        <HBox styleClass="control-bar">
            <Button fx:id="buttonPrevious" onAction="#onPrevious" styleClass="nav-button" text="Previous Page" />
            <Label fx:id="labelPage" style="-fx-text-fill: white; -fx-padding: 5;" text="Page 1" />
            <Button fx:id="buttonNext" onAction="#onNext" styleClass="nav-button" text="Next Page" />

            <Region HBox.hgrow="ALWAYS" />

            <Button onAction="#handleAdd" styleClass="action-button" text="Add" />
            <Button onAction="#handleDelete" styleClass="danger-button" text="Delete" />
        </HBox>
    </bottom>
</BorderPane>
