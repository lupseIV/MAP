<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@./css/styling.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ui.gui.MainController">

    <!-- Left Sidebar -->
    <left>
        <VBox styleClass="sidebar">
            <Label styleClass="sidebar-label" text="Social Network" />

            <Button onAction="#handleShowUsersView" styleClass="nav-button" text="Users" />
            <Button onAction="#handleShowFriendships" styleClass="nav-button" text="Friendships" />
            <Button onAction="#handleShowMessageView" styleClass="nav-button" text="Messages" />
        </VBox>
    </left>

    <!-- Dynamic Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-pane">
            <!-- Views will be injected here -->
            <Label style="-fx-text-fill: gray;" text="Welcome! Select a module from the left." />
        </StackPane>
    </center>

</BorderPane>
