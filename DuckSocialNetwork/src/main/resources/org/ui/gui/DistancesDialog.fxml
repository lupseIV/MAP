<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" style="-fx-background-color: #2b2b2b;" stylesheets="@css/styling.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ui.gui.DistancesDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Manage Distances" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <Label text="Current Distances:" textFill="#b0b0b0" />
        <TextArea fx:id="currentDistancesArea" editable="false" prefHeight="60.0" wrapText="true" />

        <VBox spacing="10.0" style="-fx-border-color: #555; -fx-border-radius: 5; -fx-padding: 10;">
            <Label text="Add New Distances" textFill="WHITE" />

            <CheckBox fx:id="autoDistancesCheckbox" text="Generate Randomly" textFill="WHITE" />

            <HBox fx:id="manualBox" spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Manual (comma separated, ascending):" textFill="#b0b0b0" />
                <TextArea fx:id="manualInput" prefHeight="40.0" prefWidth="200.0" promptText="e.g., 100, 200, 300" />
            </HBox>

            <HBox fx:id="autoBox" spacing="10.0" alignment="CENTER_LEFT" visible="false" managed="false">
                <Label text="Count:" textFill="#b0b0b0" />
                <Spinner fx:id="countSpinner" editable="true" prefWidth="80.0" />
            </HBox>
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button cancelButton="true" onAction="#handleCancel" style="-fx-background-color: #ff4444;" text="Cancel" textFill="WHITE" />
            <Button defaultButton="true" onAction="#handleSave" style="-fx-background-color: #4CAF50;" text="Save" textFill="WHITE" />
        </HBox>
    </children>
</VBox>