<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.ui.gui.DucksController"
            styleClass="content-pane">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 20 0;">
            <Label text="Manage Ducks" styleClass="h1-label"/>
            <Region HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="comboBox" onAction="#onComboboxChange"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="100"/>
                <TableColumn fx:id="usernameCol" text="Username" prefWidth="100"/>
                <TableColumn fx:id="emailCol" text="Email" prefWidth="150"/>
                <TableColumn fx:id="nrOfFriendsCol" text="Number of Friends" prefWidth="100"/>
                <TableColumn fx:id="flockNameCol" text="Flock" prefWidth="150"/>
                <TableColumn fx:id="typeCol" text="Type" prefWidth="150"/>
                <TableColumn fx:id="rezistanceCol" text="Rezitance" prefWidth="150"/>
                <TableColumn fx:id="speedCol" text="Speed" prefWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <bottom>
        <HBox styleClass="control-bar">
            <Button fx:id="buttonPrevious" text="Previous Page" onAction="#onPrevious" styleClass="nav-button"/>
            <Label fx:id="labelPage" text="Page 1" style="-fx-text-fill: white; -fx-padding: 5;"/>
            <Button fx:id="buttonNext" text="Next Page" onAction="#onNext" styleClass="nav-button"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Add Duck" onAction="#handleAddDuck" styleClass="action-button"/>
            <Button text="Delete" onAction="#handleDeleteDuck" styleClass="danger-button"/>
        </HBox>
    </bottom>

</BorderPane>