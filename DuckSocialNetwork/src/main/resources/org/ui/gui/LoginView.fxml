<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" stylesheets="@css/styling.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ui.gui.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Welcome to Duck Social" textFill="WHITE">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <Label text="Please log in to continue" textFill="#d0d0d0" />

    <VBox maxWidth="300.0" spacing="10.0">
        <Label text="Email" textFill="WHITE" />
        <TextField fx:id="emailField" promptText="Enter your email" />

        <Label text="Password" textFill="#f2f2f2" />
        <PasswordField fx:id="passwordField" promptText="Enter your password" />
    </VBox>

    <Button defaultButton="true" onAction="#handleLogin" prefWidth="300.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Login">
        <font>
            <Font size="14.0" />
        </font></Button>
    <Button mnemonicParsing="false" onAction="#handleRegister" prefWidth="300.0" style="-fx-background-color: transparent; -fx-text-fill: #2196F3; -fx-border-color: #2196F3; -fx-border-radius: 3;" text="Create Account" />

    <Label fx:id="errorLabel" textFill="RED" visible="false" />

</VBox>
