<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ui.gui.PersonFieldsController">
    <columnConstraints>
        <ColumnConstraints maxWidth="150.0" minWidth="100.0" prefWidth="120.0" />
        <ColumnConstraints maxWidth="300.0" minWidth="200.0" prefWidth="250.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0" prefHeight="30.0" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" />
    </rowConstraints>
    <children>
        <Label text="First Name" textFill="WHITE" GridPane.rowIndex="0" />
        <TextField fx:id="firstNameField" promptText="Enter first name" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Last Name" textFill="WHITE" GridPane.rowIndex="1" />
        <TextField fx:id="lastNameField" promptText="Enter last name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Job" textFill="WHITE" GridPane.rowIndex="2" />
        <TextField fx:id="occupationField" promptText="Current occupation" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Salary" textFill="WHITE" GridPane.rowIndex="3" />
        <TextField fx:id="emphatyField" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Birth Date" textFill="WHITE" GridPane.rowIndex="4" />
        <DatePicker fx:id="birthDatePicker" prefWidth="250.0" promptText="Select date" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
