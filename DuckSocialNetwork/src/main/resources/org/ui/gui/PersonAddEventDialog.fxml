<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="350.0" spacing="15.0" style="-fx-background-color: #2b2b2b;" stylesheets="@css/styling.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ui.gui.PersonAddEventDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Create New Race Event" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <VBox spacing="5.0">
            <Label text="Event Name" textFill="#b0b0b0" />
            <TextField fx:id="nameField" promptText="Enter event name" />
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button cancelButton="true" onAction="#handleCancel" style="-fx-background-color: #ff4444;" text="Cancel" textFill="WHITE" />
            <Button defaultButton="true" onAction="#handleSave" style="-fx-background-color: #4CAF50;" text="Create" textFill="WHITE" />
        </HBox>
    </children>
</VBox>