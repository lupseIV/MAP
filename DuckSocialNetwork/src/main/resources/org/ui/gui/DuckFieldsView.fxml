<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ui.gui.DuckFieldsController">
    <columnConstraints>
        <ColumnConstraints maxWidth="150.0" minWidth="100.0" prefWidth="120.0" />
        <ColumnConstraints maxWidth="300.0" minWidth="200.0" prefWidth="250.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0" prefHeight="30.0" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" />
      <RowConstraints minHeight="30.0" prefHeight="30.0" />
    </rowConstraints>
    <children>
        <Label text="Flight Speed" textFill="WHITE" GridPane.rowIndex="0" />
        <TextField fx:id="speedField" promptText="e.g. 15.5" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Wing Span" textFill="WHITE" GridPane.rowIndex="1" />
        <TextField fx:id="resistanceField" promptText="e.g. 20.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <ComboBox fx:id="duckTypeComboBox" prefHeight="31.0" prefWidth="250.0" promptText="Select Duck Type" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
